<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp">

    <TextView
        android:id="@+id/TVExportDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/export_with_contents_desc"
        android:textSize="14sp"
        android:layout_marginBottom="8dp"/>

    <CheckBox
        android:id="@+id/CBIncludeContents"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/include_contents"
        android:checked="true"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp">
        <Button
            android:id="@+id/BTAdvanced"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Advanced editing"
            android:visibility="gone"/>
        <Button
            android:id="@+id/BTAddInjection"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Add injection"/>
    </LinearLayout>

    <TextView
        android:id="@+id/TVInjectionHint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Optionally add files/folders to inject into C:\\ or Z:\\ on import"
        android:textSize="12sp"
        android:layout_marginTop="4dp"
        android:visibility="visible"/>

</LinearLayout>
