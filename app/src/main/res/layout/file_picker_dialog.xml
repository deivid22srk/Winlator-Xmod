<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Current path display -->
    <TextView
        android:id="@+id/tv_current_path"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="/storage/emulated/0/"
        android:textSize="14sp"
        android:background="@drawable/combo_box"
        android:padding="12dp"
        android:textColor="@color/colorPrimary"
        android:fontFamily="monospace"
        android:layout_marginBottom="8dp"
        android:maxLines="2"
        android:ellipsize="middle" />

    <!-- Navigation buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="8dp">

        <Button
            android:id="@+id/btn_up"
            style="@style/ButtonNeutral"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="â†‘ Up"
            android:layout_marginEnd="4dp" />

        <Button
            android:id="@+id/btn_internal"
            style="@style/ButtonNeutral"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Internal"
            android:layout_marginStart="2dp"
            android:layout_marginEnd="2dp" />

        <Button
            android:id="@+id/btn_external"
            style="@style/ButtonNeutral"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="SD Card"
            android:layout_marginStart="4dp" />

    </LinearLayout>

    <!-- File list -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_files"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/bordered_panel"
        android:padding="4dp"
        android:scrollbars="vertical" />

    <!-- Action buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end"
        android:layout_marginTop="12dp">

        <Button
            android:id="@+id/btn_cancel"
            style="@style/ButtonNeutral"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cancel"
            android:layout_marginEnd="8dp" />

        <Button
            android:id="@+id/btn_select"
            style="@style/ButtonNeutral"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select"
            android:enabled="false" />

    </LinearLayout>

</LinearLayout>