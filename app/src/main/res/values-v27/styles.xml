<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Light Theme Fullscreen (for API 27+) -->
    <style name="AppThemeFullscreen" parent="@style/AppTheme">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowBackground">@color/md3_surface_light</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:windowLayoutInDisplayCutoutMode">shortEdges</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
    </style>

    <!-- Dark Theme Fullscreen (for API 27+) -->
    <style name="AppThemeFullscreen.Dark" parent="@style/AppTheme.Dark">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowBackground">@color/md3_surface_dark</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:windowLayoutInDisplayCutoutMode">shortEdges</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
    </style>
</resources>
