<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Pressed state -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/md3_surface_container_high_light"/>
            <corners android:radius="12dp"/>
            <stroke 
                android:width="1dp"
                android:color="@color/md3_primary_light"/>
        </shape>
    </item>
    
    <!-- Focused state -->
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/md3_surface_container_light"/>
            <corners android:radius="12dp"/>
            <stroke 
                android:width="2dp"
                android:color="@color/md3_primary_light"/>
        </shape>
    </item>
    
    <!-- Disabled state -->
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/md3_surface_variant_light"/>
            <corners android:radius="12dp"/>
            <stroke 
                android:width="1dp"
                android:color="@color/md3_outline_variant_light"/>
        </shape>
    </item>
    
    <!-- Normal state -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/md3_surface_container_light"/>
            <corners android:radius="12dp"/>
            <stroke 
                android:width="1dp"
                android:color="@color/md3_outline_light"/>
        </shape>
    </item>
</selector>